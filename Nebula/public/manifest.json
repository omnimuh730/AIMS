{
	"manifest_version": 3,
	"name": "Nebula",
	"version": "1.0",
	"description": "Nebula as an extension",
	"permissions": [
		"sidePanel",
		"activeTab",
		"scripting",
		"tabs"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"side_panel": {
		"default_path": "index.html"
	},
	"action": {
		"default_title": "Open Nebula",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"contentScript.js"
			],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}